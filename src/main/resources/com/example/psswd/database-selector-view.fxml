<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.psswd.views.DatabaseSelectorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-spacing: 20;">
      <children>
          <Label fx:id="welcomeText" text="Password Manager">
            <font>
               <Font size="40.0" />
            </font>
         </Label>
         <HBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="560.0" style="-fx-spacing: 20;">
            <children>
                <Button onAction="#onCreateDatabaseClick" prefHeight="25.0" prefWidth="147.0" text="Create database" />
            </children>
         </HBox>
      </children>
   </VBox>
   <VBox prefHeight="267.0" prefWidth="560.0" style="-fx-spacing: 10;">
      <children>
         <Label text="Recently opened databases:">
            <font>
               <Font size="11.0" />
            </font>
         </Label>
         <TableView fx:id="databaseTable" prefHeight="200.0" prefWidth="200.0">
           <columns>
             <TableColumn fx:id="nameCol" editable="false" prefWidth="217.0" sortable="false" text="Name" />
             <TableColumn fx:id="pathCol" editable="false" prefWidth="341.0" sortable="false" text="Path" />
           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
         <HBox alignment="CENTER_RIGHT" prefHeight="53.0" prefWidth="560.0" style="-fx-spacing: 10;">
            <children>
               <Button mnemonicParsing="false" onAction="#onRemoveDatabaseClick" text="Remove" />
               <Button mnemonicParsing="false" onAction="#onOpenDatabaseClick" text="Open" />
            </children>
         </HBox>
      </children>
   </VBox>
</VBox>
