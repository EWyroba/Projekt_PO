<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.psswd.Client.views.NewDatabaseController">
   <children>
      <VBox layoutX="97.0" layoutY="106.0" prefHeight="189.0" prefWidth="407.0" style="-fx-spacing: 15;">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Create new user">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Text>
         <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
            <Text nodeOrientation="LEFT_TO_RIGHT" strokeType="OUTSIDE" strokeWidth="0.0" text="Username:" wrappingWidth="120" />
            <TextField fx:id="dbNameField" prefHeight="25.0" prefWidth="299.0" />
         </HBox>
         <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
            <Text nodeOrientation="LEFT_TO_RIGHT" strokeType="OUTSIDE" strokeWidth="0.0" text="Password:" wrappingWidth="120" />
            <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="298.0" />
         </HBox>
         <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
            <Text nodeOrientation="LEFT_TO_RIGHT" strokeType="OUTSIDE" strokeWidth="0.0" text="Repeat password:" wrappingWidth="120" />
            <PasswordField fx:id="passwordRepeatField" prefHeight="25.0" prefWidth="305.0" />
         </HBox>
         <HBox alignment="BOTTOM_RIGHT" prefHeight="150.0" prefWidth="429.0" style="-fx-spacing: 20;">
            <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#onCreateClick" text="Create" textAlignment="CENTER" />
            <Button cancelButton="true" contentDisplay="CENTER" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#onCancelClick" text="Cancel" textAlignment="CENTER" />
         </HBox>
      </VBox>
   </children>
</Pane>
